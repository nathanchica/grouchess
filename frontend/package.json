{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "pnpm -w build:packages && vite",
        "dev:skip-packages-build": "vite",
        "build": "pnpm -w build:packages && tsc -b tsconfig.app.build.json && vite build",
        "build:skip-packages-build": "tsc -b tsconfig.app.build.json && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "test": "vitest run --coverage",
        "test:run": "vitest run"
    },
    "dependencies": {
        "@fontsource-variable/merriweather": "^5.2.6",
        "@fontsource-variable/playfair-display": "^5.2.8",
        "@grouchess/chess": "workspace:*",
        "@grouchess/chess-clocks": "workspace:*",
        "@grouchess/errors": "workspace:*",
        "@grouchess/game-room": "workspace:*",
        "@grouchess/http-schemas": "workspace:*",
        "@grouchess/models": "workspace:*",
        "@grouchess/socket-events": "workspace:*",
        "@sentry/react": "^10.22.0",
        "@tailwindcss/vite": "^4.1.14",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-error-boundary": "^6.0.0",
        "react-router": "^7.9.4",
        "socket.io-client": "^4.8.1",
        "tailwindcss": "^4.1.14",
        "tiny-invariant": "^1.3.3"
    },
    "devDependencies": {
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.0.4",
        "typescript": "^5.9.3",
        "vite": "^7.1.9",
        "vite-plugin-svgr": "^4.5.0",
        "vitest": "^4.0.6"
    }
}
